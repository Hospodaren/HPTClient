    <DataTemplate x:Key="GroupBoxHeaderTemplate">
        <Grid>
            <Rectangle Stroke="Black" StrokeThickness="1" RadiusX="0" RadiusY="0" Fill="LightGray">
            </Rectangle>
            <TextBlock Margin="4" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Arial" FontSize="12" FontWeight="Bold" Text="{Binding}">
            </TextBlock>
        </Grid>
    </DataTemplate>
    
    <DataTemplate x:Key="GroupBoxHeaderCheckBoxTemplate">
        <Grid>
            <Rectangle Stroke="Black" StrokeThickness="1" RadiusX="0" RadiusY="0" Fill="LightGray"/>
            <ContentPresenter Content="{Binding}"/>
            <!--<CheckBox x:Name="chkABCDReduction" Margin="3">
                <TextBlock  HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Arial" FontSize="12" FontWeight="Bold" Foreground="Black" Text="{Binding}" />
            </CheckBox>-->
        </Grid>
    </DataTemplate>
    

    <DataTemplate x:Key="textABCDHeaderTemplate">
        <StackPanel Height="18" Margin="0,0,0,0" Name="spABCDHeader" VerticalAlignment="Bottom" Orientation="Horizontal" HorizontalAlignment="Left" Width="65">
            <TextBlock Height="16" Width="16" Text="A" TextAlignment="Center"></TextBlock>
            <TextBlock Height="16" Width="16" Text="B" TextAlignment="Center"></TextBlock>
            <TextBlock Height="16" Width="16" Text="C" TextAlignment="Center"></TextBlock>
            <TextBlock Height="16" Width="16" Text="D" TextAlignment="Center"></TextBlock>
        </StackPanel>
    </DataTemplate>


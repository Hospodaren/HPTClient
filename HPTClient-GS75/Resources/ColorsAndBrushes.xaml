    <LinearGradientBrush x:Key="DisabledBrushDark" EndPoint="0.5,1" StartPoint="0.5,0">
        <GradientStop Color="DarkGray" Offset="0"/>
        <GradientStop Color="Gray" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="SelectedBrushGradientHorizontal" EndPoint="1,0.5" StartPoint="0,0.5">
        <GradientStop Color="Orange" Offset="0"/>
        <GradientStop Color="AliceBlue" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="SelectedBrushGradientVertical" EndPoint="0.5,1" StartPoint="0.5,0">
        <GradientStop Color="Orange" Offset="0"/>
        <GradientStop Color="AliceBlue" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="HeaderGrayBrush" EndPoint="1,0.5" StartPoint="0,0.5">
        <GradientStop Color="WhiteSmoke" Offset="0"/>
        <GradientStop Color="LightGray" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="ShadeBrush" EndPoint="0.5,1" StartPoint="0.5,0">
        <GradientStop Color="LightGray" Offset="0"/>
        <GradientStop Color="WhiteSmoke" Offset="1"/>
    </LinearGradientBrush>


<HPT:UCMarkBetControl x:Class="HPTClient.UCUserSystemUpload"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:HPT="clr-namespace:HPTClient"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             mc:Ignorable="d">
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Namn på systemet" FontSize="12" Padding="1"/>

            <xctk:WatermarkTextBox x:Name="txtSystemName" Watermark="Namn på systemet"  Text="{Binding SystemName}" Width="400" Grid.Row="1" Margin="1"/>

            <TextBlock Text="Beskrivning av systemet" FontSize="12" Padding="1" Grid.Row="2"/>

            <xctk:WatermarkTextBox x:Name="txtCommentDescription" Watermark="Skriv en beskrivande text om systemet, klistra INTE in systemet..."  Text="{Binding SystemComment}" MaxLines="12" Width="400" Height="300" Grid.Row="3" Margin="1" AcceptsReturn="True"/>
            <!--<TextBox x:Name="txtCommentDescription" Text="{Binding SystemComment}" MaxLines="12" Width="300" Height="200" Grid.Row="1" Margin="1" AcceptsReturn="True"/>-->

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="4">
                
                <CheckBox x:Name="chkMakeSystemPublic" Content="Gör systemet publikt" Margin="1,1,8,1" VerticalAlignment="Center"/>                
                <Button x:Name="btnUploadComments" Content="Ladda upp systemet" Click="btnUploadComments_Click" Margin="1"/>
                
            </StackPanel>

            <StackPanel x:Name="spSystemUploaded" Orientation="Vertical" HorizontalAlignment="Left" Grid.Row="5" Visibility="Collapsed">

                <TextBlock x:Name="tbError" Text="Något gick snett vid uppladdning, försök igen senare.." FontWeight="Bold" Foreground="Red" Visibility="Collapsed"/>
                
                <TextBlock x:Name="tbUploadComplete" Text="System uppladdat till HPTs server. Rättningslänk skapad och systemet tillgängligt i HPT Online."
                           FontWeight="Bold" MaxWidth="300" TextWrapping="Wrap" Margin="2"/>
                
                <Label x:Name="lblSystemURL">
                    <Hyperlink x:Name="hlSystemURL" NavigateUri="{Binding SystemURL}" RequestNavigate="hlSystemURL_RequestNavigate">Öppna rättning i extern webbläsare</Hyperlink>
                </Label>

                <!--<CheckBox x:Name="chkMakeSystemPublic" Content="Gör systemet publikt" Margin="1,1,8,1" VerticalAlignment="Center"/>
                <Button x:Name="btnUploadComments" Content="Ladda upp systemet" Click="btnUploadComments_Click" Margin="1"/>-->

            </StackPanel>

        </Grid>
    </Grid>
</HPT:UCMarkBetControl>

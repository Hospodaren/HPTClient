<UserControl x:Class="HPTClient.UCHeadToHeadRace"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <ListBox ItemsSource="{Binding HeadToHeadResultCollectionList}">
            <ListBox.ItemTemplate>
                <DataTemplate>

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition />
                        </Grid.RowDefinitions>

                        <Border BorderBrush="Black" BorderThickness="1" CornerRadius="2" Background="LightBlue">
                            <StackPanel Orientation="Horizontal">
                                <StackPanel.Resources>
                                    <Style TargetType="{x:Type TextBlock}">
                                        <Setter Property="Margin" Value="2,1,12,1"/>
                                        <Setter Property="Foreground" Value="Black"/>
                                        <Setter Property="FontSize" Value="12"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                    </Style>
                                </StackPanel.Resources>
                                <TextBlock Text="{Binding Trackname}"/>
                                <TextBlock Text="{Binding DateString}"/>
                                <TextBlock Text="{Binding Path=RaceNr,StringFormat={}Lopp {0}}"/>
                                <TextBlock Text="{Binding Distance}"/>
                                <TextBlock Text="{Binding FirstPrize,StringFormat={}Förstapris: {0:N0},ConverterCulture=sv-SE}"/>
                            </StackPanel>
                        </Border>

                        <!--<ListView x:Name="lvwResults" ClipToBounds="False" Grid.Row="1" BorderBrush="WhiteSmoke" BorderThickness="6" ItemsSource="{Binding HeadToHeadResultList}" ItemContainerStyle="{StaticResource ResultListviewItemStyle}">-->
                        <ListView x:Name="lvwResults" ClipToBounds="False" Grid.Row="1" BorderBrush="WhiteSmoke" BorderThickness="6" ItemsSource="{Binding HeadToHeadResultList}">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn DisplayMemberBinding="{Binding Position}" Header="Spår"/>
                                    <GridViewColumn DisplayMemberBinding="{Binding HorseName}" Header="Namn"/>
                                    <GridViewColumn DisplayMemberBinding="{Binding Distance}" Header="Distans"/>
                                    <GridViewColumn DisplayMemberBinding="{Binding PlaceString}" Header="Placering"/>
                                    <GridViewColumn DisplayMemberBinding="{Binding Time}" Header="Tid"/>
                                    <GridViewColumn DisplayMemberBinding="{Binding Odds}" Header="Odds"/>
                                    <GridViewColumn DisplayMemberBinding="{Binding Driver}" Header="Kusk"/>
                                    <GridViewColumn DisplayMemberBinding="{Binding Earning}" Header="Intjänat"/>
                                    <!--<GridViewColumn DisplayMemberBinding="{Binding FirstPrize}" Header="Pris"/>-->
                                </GridView>
                            </ListView.View>
                        </ListView>

                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

    </Grid>
</UserControl>

<UserControl x:Class="HPTClient.UCMarkingBetSystemPicture"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    DataContextChanged="UserControl_DataContextChanged">
    <UserControl.Resources>
        <Style x:Key="tbHeaderStyle" TargetType="{x:Type TextBlock}">
            <Style.Setters>
                <Setter Property="FontFamily" Value="Tahoma"/>
                <Setter Property="FontSize" Value="24"/>
                <Setter Property="FontWeight" Value="Bold"/>
            </Style.Setters>
        </Style>
        <Style x:Key="tbLegInfoStyle" TargetType="{x:Type TextBlock}">
            <Style.Setters>
                <Setter Property="FontFamily" Value="Tahoma"/>
                <Setter Property="FontSize" Value="13"/>
                <Setter Property="FontWeight" Value="Bold"/>
            </Style.Setters>
        </Style>
    </UserControl.Resources>
    <Grid Margin="30,40,50,30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Orientation="Horizontal" Height="80" Width="800" Grid.Row="0" Grid.ColumnSpan="2">
            <Image Source="{Binding Path=BetType.BetTypeATGLogo}" Margin="10,10,30,10"/>
            <Grid VerticalAlignment="Center">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <TextBlock Text="{Binding Path=RaceDayInfo.Trackname}" Style="{StaticResource tbHeaderStyle}" Grid.Row="0"/>
                <TextBlock Text="{Binding Path=RaceDayInfo.RaceDayDateString}" Style="{StaticResource tbHeaderStyle}" Grid.Row="1"/>
            </Grid>
        </StackPanel>

        <ItemsControl ItemsSource="{Binding Path=RaceDayInfo.RaceList}" Grid.Row="1">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <!--<StackPanel Orientation="Vertical" Width="800"/>-->
                    <StackPanel Orientation="Vertical" MaxWidth="800"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Vertical" Margin="10,5,30,5">
                        <TextBlock Text="{Binding ClipboardString}" Style="{StaticResource tbLegInfoStyle}"/>
                        <ItemsControl ItemsSource="{Binding HorseListSelected}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Vertical"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding ClipboardString}"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <Border BorderBrush="Black" BorderThickness="1" CornerRadius="3" Grid.Row="1" Grid.Column="2" Grid.RowSpan="2">
            <StackPanel Orientation="Vertical">

                <TextBlock Text="Systeminformation" FontSize="14" FontWeight="Bold" Padding="5,2"/>
                <TextBlock Padding="5,2" Text="{Binding Path=SystemSize,StringFormat='Systemstorlek: {0:N0}',ConverterCulture=sv-SE}" Style="{StaticResource tbLegInfoStyle}" FontSize="13"/>
                <TextBlock Padding="5,2" Text="{Binding Path=ReducedSize,StringFormat='Reducerad storlek: {0:N0}',ConverterCulture=sv-SE}" Style="{StaticResource tbLegInfoStyle}" FontSize="13"/>
                <TextBlock Padding="5,2" Text="{Binding Path=SystemCost,StringFormat='Kostnad: {0:N2} kr',ConverterCulture=sv-SE}" Style="{StaticResource tbLegInfoStyle}" FontSize="13"/>
                <TextBlock Padding="5,2" Text="{Binding Path=ReductionQuota,StringFormat='Reduceringsgrad: {0:P1}'}" Style="{StaticResource tbLegInfoStyle}" FontSize="13"/>

                <TextBlock Text="Reduceringsvillkor" FontSize="14" FontWeight="Bold" Padding="5,10,2,2"/>

                <ListBox ItemsSource="{Binding ReductionRuleInfoList}">
                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Vertical"/>
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Vertical">
                                <TextBlock Text="{Binding HeadlineString}" Visibility="{Binding HeadlineVisibility}" FontSize="12" FontWeight="Bold" Padding="5,1" TextWrapping="Wrap"/>
                                <TextBlock Text="{Binding ReductionTypeString}" Visibility="{Binding ReductionTypeVisibility}" FontSize="11" FontWeight="Bold" Padding="5,1"/>
                                <TextBlock Text="{Binding ReductionRuleString}" Visibility="{Binding ReductionRuleVisibility}" FontSize="10" Padding="5,1"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

            </StackPanel>
        </Border>

        <!--<TextBlock Text="{Binding SystemFilename}" Grid.Row="3" Margin="10,30,0,0" Grid.ColumnSpan="3"/>-->

    </Grid>
</UserControl>

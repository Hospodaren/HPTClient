<UserControl x:Class="HPTClient.UCResultAnalyzer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             mc:Ignorable="d">
    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="315"/>
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>


            <ItemsControl ItemsSource="{Binding Path=PayOutList}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Vertical"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <TextBlock FontSize="13" FontWeight="Bold" Padding="2">
                            <TextBlock.Text>
                                <MultiBinding StringFormat="{}{0} rätt ({1}): {2:N0} kr" ConverterCulture="sv-SE">
                                    <Binding Path="NumberOfCorrect"></Binding>
                                    <Binding Path="NumberOfSystems"></Binding>
                                    <Binding Path="PayOutAmount"></Binding>
                                    </MultiBinding>
                            </TextBlock.Text>
                        </TextBlock>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <ListBox ItemsSource="{Binding HorseList}" Grid.Column="1">
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="Black" BorderThickness="1" CornerRadius="1" Margin="1" Background="LightGray">
                            <StackPanel Orientation="Vertical" Width="99">
                                <TextBlock Text="{Binding Path=LegNrString}" FontSize="12" FontWeight="Bold" Padding="2"/>
                                <TextBlock FontSize="10" FontWeight="Bold" HorizontalAlignment="Right" Width="96" Padding="2">
                                    <TextBlock.Text>
                                        <MultiBinding StringFormat="{}{0} - {1}">
                                            <Binding Path="StartNr"/>
                                            <Binding Path="Name"/>
                                        </MultiBinding>
                                    </TextBlock.Text>
                                </TextBlock>
                                <TextBlock FontSize="10" FontWeight="Bold" HorizontalAlignment="Right" Width="96" Padding="2">
                                    <TextBlock.Text>
                                        <MultiBinding StringFormat="{}{0:F1} ({1})">
                                            <Binding Path="RankvariableMean"/>
                                            <Binding Path="RankvariableSum"/>
                                        </MultiBinding>
                                    </TextBlock.Text>
                                </TextBlock>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <ListBox x:Name="lstResultAnalyzer" ItemsSource="{Binding RankVariableHorseRankList}" Grid.Row="1" Grid.ColumnSpan="2"
                      ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <Border BorderBrush="Black" BorderThickness="1" CornerRadius="1" Margin="1" Background="LightGray">
                                <TextBlock Text="{Binding CategoryText}" Width="100" Padding="2"/>
                            </Border>
                            <Border BorderBrush="Black" BorderThickness="1" CornerRadius="1" Width="100" Margin="1" Background="LightGray">
                                <TextBlock  Text="{Binding Name}" FontWeight="Bold" Padding="2"/>
                            </Border>
                            <Border BorderBrush="Black" BorderThickness="1" CornerRadius="1" Width="100" Margin="1" Background="{Binding BackColor}">
                                <TextBlock TextAlignment="Right" FontWeight="Bold" HorizontalAlignment="Right" Width="100" Padding="2">
                                    <TextBlock.Text>
                                        <MultiBinding StringFormat="{}{0:F1} ({1}) / {2:F1}">
                                            <Binding Path="Mean"/>
                                            <Binding Path="Sum"/>
                                            <Binding Path="StDev"/>
                                        </MultiBinding>
                                    </TextBlock.Text>
                                </TextBlock>
                            </Border>
                            <ListBox ItemsSource="{Binding HorseRankList}">
                                <ListBox.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Horizontal"/>
                                    </ItemsPanelTemplate>
                                </ListBox.ItemsPanel>
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Border BorderBrush="Black" BorderThickness="1" CornerRadius="1" Background="{Binding BackColor}" Margin="1">

                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition/>
                                                    <ColumnDefinition/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Text="{Binding Rank}" TextAlignment="Right" FontWeight="Bold" HorizontalAlignment="Right" Width="20" Padding="2"/>
                                                <TextBlock Text="{Binding RankValueString}" TextAlignment="Right" HorizontalAlignment="Right" Width="79" Padding="2" Grid.Column="1"/>
                                            </Grid>
                                            <!--<TextBlock TextAlignment="Right" FontWeight="Bold" HorizontalAlignment="Right" Width="100" Padding="2">
                                                <TextBlock.Text>
                                                    <MultiBinding StringFormat="{}{0} ({1:F1}) ({2})">
                                                        <Binding Path="Rank"/>
                                                        <Binding Path="RankWeighted"/>
                                                        <Binding Path="RankValueString"/>
                                                    </MultiBinding>
                                                </TextBlock.Text>
                                            </TextBlock>-->
                                        </Border>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            
            <StackPanel Grid.Row="2" Grid.Column="1" HorizontalAlignment="Right">
                <!--<Button x:Name="btnExportToClipboard" Content="Exportera till klippbordet" Click="btnExportToClipboard_Click" />-->
                <xctk:SplitButton x:Name="btnExportToClipboard" Content="Exportera till klippbordet" Click="btnExportToClipboard_Click">
                    <xctk:SplitButton.DropDownContent>
                        <StackPanel Orientation="Vertical">
                            <MenuItem x:Name="miOverviewWithHeaders" Header="Översikt med rubriker" Click="miOverviewWithHeaders_Click"/>
                            <MenuItem x:Name="miOverviewWithoutHeaders" Header="Översikt utan rubriker" Click="miOverviewWithoutHeaders_Click"/>
                        </StackPanel>
                    </xctk:SplitButton.DropDownContent>
                </xctk:SplitButton>
            </StackPanel>

        </Grid>
    </Grid>
</UserControl>

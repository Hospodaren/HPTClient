<UserControl x:Class="HPTClient.UCDriverInfo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HPTClient"
             mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <Grid Background="WhiteSmoke">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            
            <TextBlock Text="Information" FontWeight="Bold" FontSize="14" Grid.ColumnSpan="4"/>

            <TextBlock Text="Förnamn" FontWeight="Bold" Grid.Column="0" Grid.Row="1"/>
            <TextBlock Text="{Binding Path=firstName}" Grid.Column="1" Grid.Row="1"/>

            <TextBlock Text="Efternamn" FontWeight="Bold" Grid.Column="2" Grid.Row="1" Padding="8,0,5,0"/>
            <TextBlock Text="{Binding Path=lastName}" Grid.Column="3" Grid.Row="1"/>

            <TextBlock Text="Hemmabana" FontWeight="Bold" Grid.Column="0" Grid.Row="2" Padding="0,0,5,0"/>
            <TextBlock Text="{Binding Path=homeTrack.name}" Grid.Column="1" Grid.Row="2"/>

        <TextBlock Text="Ort" FontWeight="Bold" Grid.Column="2" Grid.Row="2" Padding="8,0,5,0"/>
            <TextBlock Text="{Binding Path=location}" Grid.Column="3" Grid.Row="2"/>

            <TextBlock Text="Licens" FontWeight="Bold" Grid.Column="0" Grid.Row="3"/>
            <TextBlock Text="{Binding Path=license}" Grid.Column="1" Grid.Row="3" Grid.ColumnSpan="3"/>

            <TextBlock Text="Dräkt" FontWeight="Bold" Grid.Column="0" Grid.Row="4"/>
            <TextBlock Text="{Binding Path=silks}" Grid.Column="1" Grid.Row="4" Grid.ColumnSpan="3"/>


            <!--<ListView x:Name="lvwStarts" ItemsSource="{Binding Path=years}"></ListView>-->
        </Grid>

        <ListView x:Name="lvwResults" ClipToBounds="False" Grid.Row="1" BorderBrush="WhiteSmoke" BorderThickness="6" MaxHeight="300"
                      ItemsSource="{Binding Path=statistics.years}">
            <!--ItemContainerStyle="{StaticResource ResultListviewItemStyle}">-->
            <ListView.View>
                <GridView>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Key}" Header="År"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Value.starts,StringFormat=N0,ConverterCulture=sv-SE}" Header="Starter"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Value.placement[1],StringFormat=N0,ConverterCulture=sv-SE}" Header="1:a"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Value.placement[2],StringFormat=N0,ConverterCulture=sv-SE}" Header="2:a"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Value.placement[3],StringFormat=N0,ConverterCulture=sv-SE}" Header="3:a"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Value.earnings,StringFormat=N0,ConverterCulture=sv-SE}" Header="Intjänat"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Value.winPercentage,StringFormat=P2}" Header="Segerprocent"/>
                </GridView>
            </ListView.View>
        </ListView>


    </Grid>
</UserControl>

<UserControl x:Class="HPTClient.UCHorseRankSumReductionTemplateList"
             x:Name="ucHorseRankSumReductionTemplateList"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             xmlns:HPT="clr-namespace:HPTClient"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Button x:Name="btnNewHorseRankReductionTemplate" Margin="2" Content="Ny rankreduceringsmall" Click="btnNewHorseRankReductionTemplate_Click" HorizontalAlignment="Left" Width="Auto"/>

            <TabControl x:Name="tcGroupIntervalRulesCollection" TabStripPlacement="Top" 
                        ItemsSource="{Binding Path=Config.RankSumReductionRuleCollection,ElementName=ucHorseRankSumReductionTemplateList}" Grid.Row="1">

                <TabControl.ItemTemplate>
                    <DataTemplate>
                        <HPT:UCTabItemHeader Text="{Binding Name}"/>
                    </DataTemplate>
                </TabControl.ItemTemplate>

                <TabControl.ContentTemplate>
                    <DataTemplate>
                        <HPT:UCHorseRankSumReductionTemplate/>
                    </DataTemplate>
                </TabControl.ContentTemplate>
            </TabControl>

        </Grid>
    </Grid>
</UserControl>

<Window x:Class="HPTClient.WRegistration"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Registrering"
        Icon="Icons/HPT.ico"
        Width="360" Height="200">
    <Window.Resources>

        <Style TargetType="{x:Type TextBlock}" BasedOn="{StaticResource tbStyle}">
            <Setter Property="Margin" Value="2,0"/>
            <Setter Property="Padding" Value="2,1"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>

        <Style TargetType="{x:Type TextBox}">
            <Setter Property="Margin" Value="1"/>
            <Setter Property="Padding" Value="1"/>
        </Style>

    </Window.Resources>
    <Grid>
        <Border BorderBrush="Black" BorderThickness="1" CornerRadius="4" Margin="2">
            <StackPanel Orientation="Vertical" MinWidth="200">

                <TextBlock Text="Namn"/>
                <TextBox x:Name="txtUserName" Text="{Binding Path=UserName,Mode=OneWay}"/>

                <TextBlock Text="E-Postadress"/>
                <TextBox x:Name="txtEMailAddress" Text="{Binding Path=EMailAddress,Mode=OneWay}"/>

                <TextBlock Text="Nyckel"/>
                <TextBox x:Name="txtPassword" Text="{Binding Path=Password,Mode=OneWay}" MaxLength="50"/>

                <CheckBox x:Name="chkNewsletter" Margin="2,10" Visibility="Collapsed">
                    <TextBlock Text="Prenumerera på nyhetsbrev"/>
                </CheckBox>
                
                <StackPanel Orientation="Horizontal" Margin="2" HorizontalAlignment="Right">
                    <Button x:Name="btnValidate"  Content="Validera nyckel" Margin="1" Click="btnValidate_Click"/>
                    <!--<Button x:Name="btnPROTrial"  Content="Prova PRO" Margin="1" Click="btnPROTrial_Click"/>-->
                    <Button x:Name="btnGetKey"  Content="Glömt nyckel?" Margin="1" Click="btnGetKey_Click"/>
                    <Button x:Name="btnSave"  Content="Spara" Margin="1" Click="btnSave_Click" />
                    <Button x:Name="btnCancel"  Content="Avbryt" Margin="1" Click="btnCancel_Click" />
                </StackPanel>
                
            </StackPanel>

        </Border>
    </Grid>
</Window>

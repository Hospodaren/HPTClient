<UserControl x:Class="HPTClient.UCTrioPlaceInfo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HPTClient"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <CheckBox Template="{StaticResource CheckBoxHorsePositionTemplate}" x:Name="chkTrioPlace"
                  IsChecked="{Binding Selected}" IsEnabled="{Binding NotScratched}" Foreground="Black">
            <CheckBox.Content>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="{Binding Path=InvestmentShare,StringFormat=P2}" FontWeight="Bold"/>
                    <TextBlock Text="{Binding Path=Investment,StringFormat=({0:N0}),ConverterCulture=sv-SE}"/>
                </StackPanel>
            </CheckBox.Content>
        </CheckBox>
    </Grid>
</UserControl>

<HPT:UCMarkBetControl x:Class="HPTClient.UCPersonReduction"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:HPT="clr-namespace:HPTClient"
    x:Name="ucPersonReduction"
    Loaded="ucPersonReduction_Loaded">
    <UserControl.Resources>

        <DataTemplate x:Key="horseTemplate">
            <StackPanel Orientation="Horizontal" Margin="2">
                <TextBlock Text="{Binding ParentRace.LegNrString}" Style="{StaticResource tbStyle}" Padding="1,1,4,1"/>
                <CheckBox Name="chkNrSelect" IsEnabled="{Binding NotScratched}" IsChecked="{Binding Selected}" Template="{StaticResource CheckBoxControlTemplate}" Content="{Binding StartNr}" Padding="3,0"/>
                <TextBlock Text="{Binding HorseName}" Style="{StaticResource tbStyle}" Padding="4,1,1,1"/>
            </StackPanel>
        </DataTemplate>

        <HierarchicalDataTemplate x:Key="personTemplate" ItemsSource="{Binding HorseList}" ItemTemplate="{StaticResource horseTemplate}">
            <StackPanel Orientation="Horizontal">
                <CheckBox x:Name="chkPerson" Margin="2" IsChecked="{Binding Selected}" VerticalAlignment="Center" Checked="chkPerson_Checked" Unchecked="chkPerson_Checked">
                    <TextBlock Text="{Binding NameAndNumberOfHorses}" Style="{StaticResource tbStyle}"/>
                </CheckBox>
            </StackPanel>
        </HierarchicalDataTemplate>

    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <StackPanel Orientation="Horizontal" Grid.Row="0" HorizontalAlignment="Left" Grid.ColumnSpan="2">
            <StackPanel.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="Margin" Value="2"/>
                    <Setter Property="BorderThickness" Value="1"/>
                    <Setter Property="BorderBrush" Value="DarkBlue"/>
                    <Setter Property="CornerRadius" Value="1"/>
                </Style>
            </StackPanel.Resources>

            <Border>
                <StackPanel Orientation="Horizontal">
                    <!--<CheckBox x:Name="chkUseReduction" IsChecked="{Binding Use}" VerticalAlignment="Center" Margin="2,2,12,2"
                          Checked="chkUseReduction_Checked" Unchecked="chkUseReduction_Checked">-->
                    <CheckBox x:Name="chkUseReduction" IsChecked="{Binding Use}" VerticalAlignment="Center" Margin="2,2,12,2">
                        <TextBlock Style="{StaticResource tbMediumStyle}" Text="Använd reducering" FontSize="12"/>
                    </CheckBox>
                    <Button x:Name="btnNewRule" Content="Ny"  Margin="2" Click="btnNewRule_Click" Width="70" ToolTip="Skapa ny reduceringsregel"/>
                    <!--<Button x:Name="btnClearRule" Content="Rensa"  Margin="2" Click="btnClearRule_Click" Width="70" ToolTip="Rensa alla inställningar för vald reduceringsregel"/>-->
                    <Button x:Name="btnRemoveAll" Content="Ta bort alla"  Margin="2" Click="btnRemoveAll_Click"  Width="70" ToolTip="Rensa alla inställningar för vald reduceringsregel"/>
                </StackPanel>
            </Border>

            <Border>
                <StackPanel Orientation="Horizontal">

                    <TextBlock Style="{StaticResource tbMediumStyle}" Text="Antal villkor" FontSize="12" Padding="2"/>

                    <ItemsControl x:Name="itNumberOfPersonRules" ItemsSource="{Binding Path=NumberOfWinnersList}" 
                                  Margin="2" ToggleButton.Checked="itNumberOfPersonRules_Checked" ToggleButton.Unchecked="itNumberOfPersonRules_Checked">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <CheckBox Template="{StaticResource CheckBoxTemplate}" 
                                                      Content="{Binding NumberOfWinners}" 
                                                      IsChecked="{Binding Selected}" 
                                                      IsEnabled="{Binding Selectable}"
                                                      FontSize="12"
                                                      Width="13"
                                                      Height="16"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>

            <!--<Button x:Name="btnCalculate" Content="Beräkna"  Margin="2" Click="btnCalculate_Click" Width="70" ToolTip="Beräkna reducerat system inkluderat ovanstående skapade regler" HorizontalAlignment="Right"/>-->
        </StackPanel>
        
        <GroupBox Background="{StaticResource BackgroundBrush}" HeaderTemplate="{StaticResource GroupBoxHeaderTemplate}" Header="{Binding Path=Text}" 
                  HorizontalAlignment="Stretch" Grid.Column="0" Grid.Row="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="20"/>
                </Grid.RowDefinitions>
            
                <TreeView ItemsSource="{Binding Path=PersonList,ElementName=ucPersonReduction}" ItemTemplate="{StaticResource personTemplate}" Grid.Row="0"/>
                
                <CheckBox x:Name="chkOnlyWithSelected" Checked="chkOnlyWithSelected_Checked" Unchecked="chkOnlyWithSelected_Checked" Grid.Row="1" VerticalAlignment="Center">
                    <TextBlock Text="Endast med valda hästar" FontWeight="Bold"/>
                </CheckBox>
                
                <CheckBox x:Name="chkOnlyTwoOrMore" Checked="chkOnlyTwoOrMore_Checked" Unchecked="chkOnlyTwoOrMore_Checked" Grid.Row="2" VerticalAlignment="Center">
                    <TextBlock Text="Endast med minst två hästar" FontWeight="Bold"/>
                </CheckBox>
            </Grid>
        </GroupBox>

        <Grid Grid.Column="1" Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <HPT:UCRaceView DataContext="{Binding ElementName=ucPersonReduction}"/>

            <GroupBox Background="{StaticResource BackgroundBrush}" HeaderTemplate="{StaticResource GroupBoxHeaderTemplate}" Header="Sparade regler" HorizontalAlignment="Stretch" Grid.Row="1">
                <ItemsControl ItemsSource="{Binding Path=ReductionRuleList}" Margin="2" Grid.Column="0" Grid.Row="2">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Vertical"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="Black" BorderThickness="1">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <!--<TextBlock Text="Antal" Grid.Column="0" Padding="2" VerticalAlignment="Center" FontSize="12" Foreground="Black"/>-->
                                    <CheckBox x:Name="chkUsePersonRule" Margin="2" IsChecked="{Binding Path=Use}" HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Arial" FontSize="11" FontWeight="Bold" Text="Antal" />
                                    </CheckBox>

                                    <ItemsControl ItemsSource="{Binding NumberOfWinnersList}" Margin="2" Grid.Column="1"  Padding="2" VerticalAlignment="Center"
                                                  ToggleButton.Checked="ItemsControl_Checked" ToggleButton.Unchecked="ItemsControl_Checked">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <WrapPanel Orientation="Horizontal"/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <CheckBox Template="{StaticResource CheckBoxTemplate}" 
                                                  Content="{Binding NumberOfWinners}" 
                                                  IsChecked="{Binding Selected}" 
                                                  IsEnabled="{Binding Selectable}"
                                                  FontSize="12"
                                                  Width="13"
                                                  Height="16"/>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>

                                    <Button x:Name="btnSelect" Content="Välj"  Margin="2" Grid.Column="2" Click="btnSelect_Click" Padding="2" VerticalAlignment="Center" Width="60"/>

                                    <Button x:Name="btnRemove" Content="Ta bort"  Margin="2" Grid.Column="3" Click="btnRemove_Click" Padding="2" VerticalAlignment="Center" Width="60"/>

                                    <ItemsControl ItemsSource="{Binding Path=PersonList}" Grid.Column="4" Padding="2" VerticalAlignment="Center">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <WrapPanel Orientation="Horizontal"/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border BorderBrush="Black" BorderThickness="1" CornerRadius="2" Margin="2" VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding Name}" Style="{StaticResource tbStyle}" Padding="2"/>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </GroupBox>

            <!--<StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Right">
                <CheckBox x:Name="chkUseReduction" Style="{StaticResource HPTCheckBox}" IsChecked="{Binding Use}" VerticalAlignment="Center" Margin="2,2,12,2"
                          Checked="chkUseReduction_Checked" Unchecked="chkUseReduction_Checked">
                    <TextBlock Style="{StaticResource tbMediumStyle}" Text="Använd reducering"/>
                </CheckBox>
                <Button x:Name="btnNewRule" Content="Ny"  Margin="2" Click="btnNewRule_Click" Width="70" ToolTip="Skapa ny reduceringsregel"/>
                <Button x:Name="btnClearRule" Content="Rensa"  Margin="2" Click="btnClearRule_Click" Width="70" ToolTip="Rensa alla inställningar för vald reduceringsregel"/>
                <Button x:Name="btnRemoveAll" Content="Ta bort alla"  Margin="2" Click="btnRemoveAll_Click"  Width="70" ToolTip="Rensa alla inställningar för vald reduceringsregel"/>
                <Button x:Name="btnCalculate" Content="Beräkna"  Margin="2" Click="btnCalculate_Click" Width="70" ToolTip="Beräkna reducerat system inkluderat ovanstående skapade regler" HorizontalAlignment="Right"/>
            </StackPanel>-->

        </Grid>

    </Grid>
</HPT:UCMarkBetControl>

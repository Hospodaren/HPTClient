<UserControl x:Class="HPTClient.UCMarkBetTabsToShow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    DataContextChanged="UserControl_DataContextChanged"
    Loaded="UserControl_Loaded"
    x:Name="ucMarkBetTabsToShow">
    <Grid>
        <GroupBox x:Name="gbSettings" Background="{StaticResource BackgroundBrush}" BorderBrush="Black" HeaderTemplate="{StaticResource GroupBoxHeaderTemplate}" Header="Flikar Vxx" Grid.Column="1" HorizontalAlignment="Left" Margin="2,2,6,2">

            <GroupBox.Resources>
                <Style TargetType="{x:Type CheckBox}">
                    <Style.Setters>
                        <Setter Property="Margin" Value="2,2,12,2"/>
                        <Setter Property="VerticalAlignment" Value="Center"/>
                        <Setter Property="FontSize" Value="11"/>
                        <Setter Property="Foreground" Value="Black"/>
                        <Setter Property="FontFamily" Value="Tahoma"/>
                        <Setter Property="FontWeight" Value="Medium"/>
                    </Style.Setters>
                </Style>

            </GroupBox.Resources>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition />
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Profil" VerticalAlignment="Center" FontFamily="Tahoma" FontWeight="Medium" Padding="2"/>
                    <ComboBox x:Name="cmbGUIProfile" Text="Gränssnitt" Grid.Column="1" HorizontalAlignment="Stretch" Margin="2" SelectionChanged="cmbGUIProfile_SelectionChanged">
                        <ComboBoxItem Content="Enkel" Tag="0"/>
                        <ComboBoxItem Content="Standard" Tag="1"/>
                        <ComboBoxItem Content="Komplett" Tag="2"/>
                    </ComboBox>
                    <Button x:Name="btnResetProfile" Content="Återställ" Click="btnResetProfile_Click" Grid.Column="3"/>
                </Grid>

                <ItemsControl x:Name="icMarkBetTabsToShow" ItemsSource="{Binding Path=MarkBetTabsToShowList,ElementName=ucMarkBetTabsToShow}" Height="Auto" Width="Auto" Grid.Row="1"/>
            </Grid>
            
        </GroupBox>
    </Grid>
</UserControl>

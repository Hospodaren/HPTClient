<UserControl x:Class="HPTClient.UCShoeInfo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d">
    <UserControl.Resources>

        <BooleanToVisibilityConverter x:Key="hptVisibilityConverter"/>

        <Style x:Key="ForeshoesStyle" TargetType="{x:Type TextBlock}">
            <Style.Triggers>
                <DataTrigger Binding="{Binding ForeshoesChanged}" Value="True">
                    <Setter Property="Foreground" Value="Red"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="HindshoesStyle" TargetType="{x:Type TextBlock}">
            <Style.Triggers>
                <DataTrigger Binding="{Binding HindshoesChanged}" Value="True">
                    <Setter Property="Foreground" Value="Red"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

    </UserControl.Resources>
    
    <Grid>
        <!--<Grid Width="36" Height="14" Background="White">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="6"/>
                <ColumnDefinition Width="12"/>
                <ColumnDefinition Width="12"/>
                <ColumnDefinition Width="6"/>
            </Grid.ColumnDefinitions>-->
        <Grid Height="14" Background="White" Width="Auto">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <TextBlock Text="(" Grid.Column="0" Background="White" Padding="1" VerticalAlignment="Top" FontSize="10"
                       Visibility="{Binding Path=PreviousUsed,Converter={StaticResource hptVisibilityConverter}}"/>
            
            <TextBlock Text="{Binding ForeshoesString1}" Grid.Column="1" Style="{StaticResource ForeshoesStyle}" Padding="1"
                       Background="White" FontSize="10"/>
            <TextBlock Text="{Binding ForeshoesString2}" Grid.Column="1" Style="{StaticResource ForeshoesStyle}" Padding="1"
                       FontWeight="Bold" FontSize="10"/>

            <TextBlock Text="{Binding HindshoesString1}" Grid.Column="2" Style="{StaticResource HindshoesStyle}" Padding="1"
                       Background="White" FontSize="10"/>
            <TextBlock Text="{Binding HindshoesString2}" Grid.Column="2" Style="{StaticResource HindshoesStyle}" Padding="1"
                       FontWeight="Bold" FontSize="10"/>

            <TextBlock Text=")" Grid.Column="3" Background="White" Padding="1" VerticalAlignment="Top" FontSize="10"
                       Visibility="{Binding Path=PreviousUsed,Converter={StaticResource hptVisibilityConverter}}"/>

        </Grid>
    </Grid>
</UserControl>

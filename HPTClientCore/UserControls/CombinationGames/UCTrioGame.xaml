                        <GridSplitter BorderBrush="Black" BorderThickness="1" Grid.Column="1" VerticalAlignment="Stretch" HorizontalAlignment="Center" ResizeBehavior="BasedOnAlignment" ResizeDirection="Columns" Background="{StaticResource SelectedBrush}" Width="4" Margin="1"/>

                        <Grid Grid.Column="2">
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <HPT:UCCombinationView CombBet="{Binding Path=CombBet,ElementName=ucTrioGame}"
                                                   DataContext="{Binding Path=CombinationListInfoTrio}"/>

                            <HPT:UCCombinationRaceHandling CombBet="{Binding Path=CombBet,ElementName=ucTrioGame}" Grid.Row="1"
                                                   DataContext="{Binding Path=CombinationListInfoTrio}"/>

                        </Grid>
                    </Grid>
                </DataTemplate>
            </TabControl.ContentTemplate>
        </TabControl>

        <!--Funktion för hela Trio-omgången-->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition />
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom">

                <TextBlock x:Name="txtCountdownInfo" Margin="2" FontWeight="Bold"/>
                <TextBlock x:Name="txtCountdownTimer" Margin="2"/>

            </StackPanel>
        <HPT:UCCombinationsGameHandling CombBet="{Binding CombBet,ElementName=ucTrioGame}" 
                                        DataContext="{Binding Path=CombBet,ElementName=ucTrioGame}" 
                                        Grid.Row="1" HorizontalAlignment="Right"/>
        </Grid>

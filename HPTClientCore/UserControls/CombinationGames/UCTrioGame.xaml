                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!--Race-->
                        <HPT:UCTvillingTrioRace Grid.Row="0" Height="Auto"/>
